<div id="top" class="front-page-wrapper">
  <div class="column1">
    <div class="sliderText">
      <h1 id="slider_text" class="sliderText_content">{{title}}</h1>
    </div>
    <div class="column2">
      <p class="sliderText_content subtitle">{{subtitle}}</p>
    </div>
  </div>
  <div class="column2">
    <img class="logo" src="/images/thepoint.png" width="40%" alt="">
    <form class="form" action="/send" method="post">
        <h4>STAY UP TO DATE WITH YOUR FUTURE HOME</h4>
        <input required class="form_content" type="text" name="fname" placeholder="First Name"value="">
        <input required class="form_content" type="text" name="email" placeholder="Email Address"value="">
        <button class="form_content" type="submit" name="button">Submit</button>
        <p><em style="font-size:.4em">*We will not sell your email to any 3rd parties or send non-related advertisements to this account*</em></p>
    </form>
    <a style="margin:auto" href="#images-info-wrapper"><h3>Learn More</h3></a>
    <a href="#images-info-wrapper"><img style="margin:14px"src="/images/down_arrow.png" width="40%" alt=""></a>
  </div>
</div>

